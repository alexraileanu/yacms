{% extends 'backend/includes/base.j2' %}

{% from 'backend/includes/macros.j2' import render_field, render_submit_field, render_flashes %}

{% block menu %}
    {% include 'backend/includes/adminMenu.j2' %}
{% endblock %}

{% block sidebar %}
    {% include 'backend/includes/sidebar.j2' %}
{% endblock %}

{% block content %}
    <div class="content-padder content-background">
        <div class="uk-section-small uk-section-default header">
            <div class="uk-container uk-container-large">
                <div class='uk-section'>
                    <div class='uk-container'>
                        <div class='uk-flex uk-flex-center'>
                            <form method='POST' role='form' class='form' style='width: 50%'> {# TODO: fix this #}
                                <h1>Change password</h1>

                                {{ form.hidden_tag() }}
                                <fieldset class='uk-fieldset'>
                                    <div class='uk-margin'>
                                        {{ render_field(form.old_password, tabindex=110, placeholder='old password', class='uk-input') }}
                                    </div>

                                    <div class='uk-margin'>
                                        {{ render_field(form.new_password, tabindex=120, placeholder='new password', class='uk-input') }}
                                    </div>

                                    <div class='uk-margin'>
                                        {{ render_field(form.retype_password, tabindex=130, placeholder='re-type new password', class='uk-input') }}
                                    </div>

                                    <div class='uk-margin'>
                                        {{ render_submit_field(form.submit, tabindex=140) }}
                                    </div>
                                </fieldset>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}